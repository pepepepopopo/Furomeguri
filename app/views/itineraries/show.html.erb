<div class="flex flex-col space-y-4 p-4 mx-auto">
  <% if @blocks.present? %>
    <% @blocks.each do |block| %>
      <div class="bg-white border border-gray-200 rounded-xl shadow-md p-6 space-y-2">
        <p class="text-xl font-bold text-gray-900 mb-2 flex items-center gap-2">
          <%= block.place.name %>
        </p>
        <% if block.starttime.present? %>
          <div class="flex items-center text-gray-700 gap-2 mb-2">
            <span class="text-sm">到着予定：</span>
            <span class="text-base font-medium"><%= block.starttime.strftime('%Y/%m/%d %H:%M') %>頃</span>
          </div>
        <% end %>
          <% if block.description.present? %>
            <div class="bg-gray-50 rounded-md p-3">
              <p class="text-sm text-gray-600 leading-relaxed">
                <%= block.description %>
              </p>
            </div>
          <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white border border-gray-200 rounded-lg shadow p-4">
      <p>どこも登録されていないようです</p>
    </div>
  <% end %>
</div>
