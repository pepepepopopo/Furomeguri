<div class="mt-4 flex justify-center items-center mx-auto">
  <%= form_with model: @user, url: user_registration_path, local: true, html: { class: "w-full max-w-sm" } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-wrap">

      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :email, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %><br />
        </div>
        <div class="md:w-2/3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :password, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
          <i>(変更しない場合空欄にしてください)</i><br />
        </div>
        <div class="md:w-2/3">
          <%= f.password_field :password, autocomplete: "new-password", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </div>
      </div>

      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :password_confirmation, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %><br />
        </div>
        <div class="md:w-2/3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>

      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :current_password, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        </div>
        <div class="md:w-2/3">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>

      <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
        <div class="md:w-2/3">
          <%= f.submit "Update", class:"shadow w-full max-w-sm min-w-fit bg-blue-600 hover:bg-blue-700 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
