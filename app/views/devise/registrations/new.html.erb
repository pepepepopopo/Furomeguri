<div class="flex flex-1 items-center justify-center">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true, html: { class: "w-ful max-w-md" } do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :email, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full input input-primary" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="md:w-2/3">
        <%= f.password_field :password, autocomplete: "new-password", class:"w-full input input-primary" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password_confirmation, class:"block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full input input-primary" %>
      </div>
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3 gap-y-4">
        <%= f.submit "新規登録",id:"form_signin_button", class:"w-full min-w-fit bg-blue-600 hover:bg-blue-700 text-white font-bold btn" %>
        <button class="btn w-full min-w-fit bg-white text-black border-[#e5e5e5]">
          <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"></path><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path></g></svg>
          <%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, method: :post %>
        </button>
      </div>
    </div>
  <% end %>
</div>
