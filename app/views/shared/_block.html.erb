<turbo-frame id="block_<%= block.id || 'new' %>">
  <div class="flex m-2">
    <div class="drag-handle flex items-center justify-center w-8 cursor-grab hover:bg-base-300 border-l border-b border-t border-base-300" title="ドラッグして並び替え">
      <svg class="w-4 h-4 text-base-content/60" fill="currentColor" viewBox="0 0 24 24">
        <path d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z"/>
      </svg>
    </div>
    <div class="card flex-1 card-border bg-base-100 card-xs shadow-sm">
      <div class="card-body">
        <h2 class="card-title"><%= block.place.name %></h2>
        <%= text_area_tag 'blocks[][description]',
                          block.description,
                          class: 'textarea',
                          placeholder: '持ち物 etc..' %>
        <p class="mt-2 text-gray-700">到着時間</p>
        <%= tag.input type: 'datetime-local',
                      name: 'blocks[][starttime]',
                      value: (block.starttime&.strftime('%Y-%m-%dT%H:%M')),
                      class: 'input' %>
        <%= hidden_field_tag 'blocks[][row_order]',
                              block.row_order,
                              class: 'row-order-field' %>
        <%= hidden_field_tag 'blocks[][id]', block.id %>
        <div class="justify-end card-actions">
          <%= link_to '削除',
                      itinerary_itinerary_block_path(block.itinerary, block),
                      data: { turbo_method: :delete,
                              turbo_stream: true,
                              turbo_confirm: '削除しますか？' },
                      class: 'btn btn-error' %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>