<div class="tab-content bg-base-100 border-base-300 p-6">
  <div class="flex justify-center">
    <select name="accommodation_type" id="accommodation_type" class="select">
      <option value="旅館・ホテル" selected>旅館・ホテル</option>
      <option value="旅館・ホテルを含めない">旅館・ホテルを含めない</option>
    </select>

    <select name="poi_type" id="poi_type" class="select">
