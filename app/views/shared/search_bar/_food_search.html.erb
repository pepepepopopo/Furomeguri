<div class="tab-content bg-base-100 border-base-300 p-4">
  <div class="flex justify-center gap-1">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-success whitespace-nowrap">ジャンル</div>
      <div tabindex="0" class="dropdown-content bg-base-100 rounded-box z-1 p-4 shadow-sm w-72 sm:w-80 md:w-130">
        <div class="grid grid-cols-3 gap-2 mb-3">
          <input class="btn" type="checkbox" name="G001" value="G001" aria-label="居酒屋"/>
          <input class="btn" type="checkbox" name="G002" value="G002" aria-label="ダイニングバー・バル"/>
          <input class="btn" type="checkbox" name="G003" value="G003" aria-label="創作料理"/>
          <input class="btn" type="checkbox" name="G004" value="G004" aria-label="和食"/>
          <input class="btn" type="checkbox" name="G005" value="G005" aria-label="洋食"/>
          <input class="btn" type="checkbox" name="G006" value="G006" aria-label="イタリアン・フレンチ"/>
          <input class="btn" type="checkbox" name="G007" value="G007" aria-label="中華"/>
          <input class="btn" type="checkbox" name="G008" value="G008" aria-label="焼肉・ホルモン"/>
          <input class="btn" type="checkbox" name="G017" value="G017" aria-label="韓国料理"/>
          <input class="btn" type="checkbox" name="G009" value="G009" aria-label="アジア・エスニック料理"/>
          <input class="btn" type="checkbox" name="G010" value="G010" aria-label="各国料理"/>
          <input class="btn" type="checkbox" name="G011" value="G011" aria-label="カラオケ・パーティ"/>
          <input class="btn" type="checkbox" name="G012" value="G012" aria-label="バー・カクテル"/>
          <input class="btn" type="checkbox" name="G013" value="G013" aria-label="ラーメン"/>
          <input class="btn" type="checkbox" name="G016" value="G016" aria-label="お好み焼き・もんじゃ"/>
          <input class="btn" type="checkbox" name="G014" value="G014" aria-label="カフェ・スイーツ"/>
          <input class="btn" type="checkbox" name="G015" value="G015" aria-label="その他グルメ"/>
        </div>
        <input class="btn btn-error w-full" type="reset" value="リセット"/>
      </div>
    </div>
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-success whitespace-nowrap">こだわり条件</div>
      <div tabindex="0" class="dropdown-content bg-base-100 rounded-box z-1 p-4 shadow-sm w-72 sm:w-80 md:w-130">
        <div class="grid grid-cols-3 gap-2 mb-3">
          <input class="btn" type="checkbox" name="城" value="城" aria-label="城"/>
          <input class="btn" type="checkbox" name="大浴場" value="大浴場" aria-label="大浴場"/>
          <input class="btn" type="checkbox" name="サウナ" value="サウナ" aria-label="サウナ"/>
        </div>
        <input class="btn btn-error w-full" type="reset" value="リセット"/>
      </div>
    </div>
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-success whitespace-nowrap" id="budget-button">予算</div>
      <div tabindex="0" class="dropdown-content bg-base-100 rounded-box z-1 p-4 shadow-sm w-72 sm:w-80 md:w-72">
        <div class="flex items-center gap-2">
          <select name="min_price" id="min_price" class="select w-auto">
            <option disabled selected>最低料金</option>
            <option value="">下限なし</option>
            <% budget_price_options[:min].each do |price| %>
              <option value="<%= price %>"><%= number_with_delimiter(price) %>円</option>
            <% end %>
          </select>
          <span>～</span>
          <select name="max_price" id="max_price" class="select w-auto">
            <option disabled selected>最高料金</option>
            <option value="">上限なし</option>
            <% budget_price_options[:max].each do |price| %>
              <option value="<%= price %>"><%= number_with_delimiter(price) %>円</option>
            <% end %>
          </select>
        </div>
        <input class="btn btn-error w-full mt-3" type="reset" value="リセット"/>
      </div>
    </div>
    <input type="search" name="keyword" placeholder="検索" value="<%= @keyword %>" class="input">
    <input type="submit" name="api_type" value="🔎" class="btn btn-active bg-blue-700" data-api-type="rakuten" />
  </div>
</div>