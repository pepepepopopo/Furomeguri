<aside id="sidebar" data-controller="sidebar" class="fixed top-14 bottom-0 right-0 w-80 max-w-full
              translate-x-full sm:translate-x-0
              transition-transform duration-300 ease-in-out
              bg-white shadow-xl border-l border-gray-200
              flex flex-col z-40">

  <div class="p-4 border-b border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 break-words"><%= @itinerary.title %></h2>
    <% if @itinerary.subtitle.present? %>
      <p class="mt-1 text-sm text-gray-500 break-words"><%= @itinerary.subtitle %></p>
    <% end %>
  </div>

  <div id="sidebar-items" class="flex-1 overflow-y-auto divide-y divide-gray-100">
    <% if @blocks.any? %>
      <%= render blocks %>
    <% else %>
      <p class="p-4 text-sm text-gray-500">
        スポットが無いようです
        スポットを検索して旅程に追加しましょう
      </p>
    <% end %>
  </div>

  <div class="p-4 border-t border-gray-200">
    <%= link_to "旅程を完了", itinerary_path(@itinerary), class: "w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700" %>
  </div>
</aside>
