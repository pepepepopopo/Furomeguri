<%= form_with url: itinerary_path(@itinerary), method: :patch do %>
  <turbo-frame id="sidebar_frame">
    <aside id="sidebar" data-controller="sidebar" data-itinerary-id="<%= itinerary.id %>"
                  class="fixed top-14 bottom-0 right-0 w-80 max-w-full
                  translate-x-full sm:translate-x-0
                  transition-transform duration-300 ease-in-out
                  bg-white shadow-xl border-l border-gray-200
                  flex flex-col z-40">

      <!-- タイトル -->
      <div class="p-4 border-b border-gray-200">
        <h2 class="text-lg font-bold break-words"><%= itinerary.title %></h2>
        <% if itinerary.subtitle.present? %>
          <p class="mt-1 text-sm text-gray-500 break-words"><%= itinerary.subtitle %></p>
        <% end %>
      </div>

      <!-- ブロック一覧 -->
      <div id="sidebar-items" class="flex-1 overflow-y-auto divide-y divide-gray-100">
        <% if blocks.present? %>
          <%= render partial: 'shared/block', collection: blocks, as: :block %>
        <% else %>
          <p class="p-4 text-sm text-gray-500">
            スポットが無いようです。検索して旅程に追加しましょう。
          </p>
        <% end %>
      </div>

      <!-- フッター -->
      <div class="p-4 border-t border-gray-200">
        <%= submit_tag '旅程を保存',
                    class: 'w-full inline-flex items-center justify-center
                            px-4 py-2 text-sm font-medium text-white
                            bg-blue-600 rounded-md hover:bg-blue-700' %>
      </div>
    </aside>
  </turbo-frame>
<% end %>

